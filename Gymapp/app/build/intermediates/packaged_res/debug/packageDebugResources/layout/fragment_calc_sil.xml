<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".ui.calc_sil.CalcsilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <EditText
            android:id="@+id/edittext_calc_sil_weight"
            android:layout_width="130dp"
            android:layout_height="73dp"
            android:height="48dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/text_calc_sil_weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toEndOf="@+id/text_calc_sil_weight"
            app:layout_constraintTop_toTopOf="@+id/text_calc_sil_weight"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_calc_sil_weight"
            android:layout_width="200dp"
            android:layout_height="73dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/calc_sil_weight"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/text_calc_sil_repeats"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="@string/calc_sil_repeats"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_calc_sil_weight" />

        <EditText
            android:id="@+id/edittext_calc_sil_repeats"
            android:layout_width="130dp"
            android:layout_height="74dp"
            android:height="48dp"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/text_calc_sil_repeats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toEndOf="@+id/text_calc_sil_repeats"
            app:layout_constraintTop_toTopOf="@+id/text_calc_sil_repeats"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/text_calc_sil_1pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_calc_sil" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_calc_sil_1"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_calc_sil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/text_button_calc_sil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_exercise_name" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="кг"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/edittext_calc_sil_weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edittext_calc_sil_weight"
            app:layout_constraintTop_toTopOf="@+id/edittext_calc_sil_weight" />

        <EditText
            android:id="@+id/edittext_exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Название упражнения"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_calc_sil_repeats" />

        <Button
            android:id="@+id/button_save_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Сохранить результат"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_calc_sil_1pm" />

        <Button
            android:id="@+id/button_view_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Просмотреть историю"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_save_record" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>